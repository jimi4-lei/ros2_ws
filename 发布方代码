#publisher.py
import rclpy
from rclpy.node import Node
from tutorial_interfaces.msg import Num
import random

class NumPublisher(Node):
    def __init__(self):
        super().__init__('num_publisher')
        self.publisher_ = self.create_publisher(Num, 'num_topic', 10)
        self.timer = self.create_timer(1.0, self.timer_callback)
        self.get_logger().info('âœ… å‘å¸ƒå™¨å·²å¯åŠ¨')
    
    def timer_callback(self):
        msg = Num()
        msg.num1 = random.randint(0, 100)
        msg.num2 = random.randint(0, 100)
        self.publisher_.publish(msg)
        self.get_logger().info(f'ğŸ“¤ å‘å¸ƒ: num1={msg.num1}, num2={msg.num2}')

def main(args=None):
    rclpy.init(args=args)
    node = NumPublisher()
    rclpy.spin(node)
    node.destroy_node()
    rclpy.shutdown()

if __name__ == '__main__':
    main()
